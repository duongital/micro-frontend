            width: 45%;

            &[readonly] {
                border: none;
            }
        }

        .editable {
            border: 2px inset;
            -webkit-appearance: textfield;
            min-width: 33px;
            margin: 3px 0px;
            padding: 2px;
        }

        [contenteditable]:empty:before{
            content: attr(placeholder);
            display: inline-block;
            color: $gray20;
        }

        .contact {

            &.unconfirmed{
              color: $blue30;
            }

            &.unconfirmed span.unconfirmed{
              color: $gray05;
              background-color: $blue30;
              font-size: 0.7em;
              position: relative;
              padding: 2px;
              top: -10px;
              left: 20px;
            }

            .city {
                margin-left: 20px;
                display: inline-block;
                margin-top: 5px;
                vertical-align: top;
            }
            .email {
              position: relative;
              top: -10px;
            }
        }

        #data {
            margin-bottom: 40px;
        }

        .contentbox {
            padding-top: 20px;
            padding-bottom: 20px;

            .name {
                font: $teasertextfont;
                text-overflow: ellipsis;
                max-width: 33%;
                overflow: hidden;
                display: inline-block;
            }

            .contact {
                padding: 10px 0 0 20px;
                margin: 0 -20px;
                min-height: 40px;

                &.even {
                    background-color: $saharaDust3;
                }
            }

            .contactaction {
                position: absolute;
                padding: 10px 5px;
                margin-top: -45px;
                right: 0;

                .view {
                    width: 40px;
                }

                &:hover {
                    transition:all ease-in-out 1s;
                    background: rgba($blue100, 0.6);

                    .view {
                        color: white;
                    }
                }
            }
        }
    }

    .productcontainer {

        .adminbox {
            cursor: pointer;
        }

        .inset {
            margin-bottom: 2px;

            .insetcontent {
                padding: 0;

                .productsrow {
                    overflow-y: hidden;
                    background: white;

                    .previous,
                    .next {
                        width: 40px;
                        height: 150px;
                        position: absolute;
                        padding-left: 20px;
                        margin-left: -20px;
                        padding-top: 130px;
                        z-index: 20;
                        float: left;
                        cursor: pointer;

                        &.notclickable {
                            color: $gray10;
                            cursor: auto;
                        }

                        &:before {
                            $size = 40px;
                            box-sizing: border-box;
                            width: 100%;
                            height: $size;
                            margin-top: - ($size / 2);
                            font-size: $size;
                        }
                    }

                    .next {
                        left: $fullsize - 40px;
                    }

                    .products {
                        height: 500px;
                        width: 320px;
                        overflow: hidden;
                        overflow-x: auto;
                        position: relative;
                        float: left;

                        .product {
                            width: 290px;
                            margin-bottom: 20px;
                            position: absolute;
                            height: 480px;
                            //-webkit-transform: translate3d(0,0,0);
                            transition:all ease-in-out 0.8s;

                            .image {
                                min-height: 210px;

                                &.active:before {
                                    content: " ";
                                    display: block;
                                    position: absolute;
                                    z-index: 2000;
                                    left: 0
                                    top: 0
                                    bottom: 0
                                    right: 0
                                    border 10px solid $red100;
                                }
                            }

                            .for {
                                color: $blue60;
                                font $smallcontentfont

                                strong {
                                    color: $blue100;
                                    font-weight: $gotham_regular;
                                }
                            }
                        }
                    }
                }
            }
        }
    }

    .form {

        input:invalid {
            box-shadow: none;
        }

        input.ng-dirty.ng-invalid {
            border-color: $red100;
            box-shadow: 0 0 10px $red100;
        }

        .error {
            color: $red100;
        }

        .warning {
            margin-top: 36px;
        }

        .pwforgot {
            text-decoration: underline;
            cursor: pointer;
            text-align: right;
        }
    }

    .finder {
        .productcontainer {
            background-color: white;
        }
    }
}


#businesscards {

    .filter{
      margin-left: 20px;
