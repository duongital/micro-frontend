                }
            }

            .title {
                text-transform: uppercase;
                font: $mainactionfont;
                top 23px
                position relative

                // TODO: change to blue or lighter
                &.red {
                    color: $blue60
                }
            }

            .buttontext {
                cursor: pointer;
                text-transform: uppercase;
                margin-top: 28px;
                margin-right: 5px;
                float: right;
                color: $red100;
            }
        }

        .sortrow {
            height: 30px;

            .contactsort {
                cursor: pointer;
                text-align: right;
                text-transform: uppercase;

                padding: 10px 25px 0 11px;
                background: url('../../assets/img/icon_dropdown_marker.png') no-repeat right top;
            }
        }

        .pwchange {
            margin: 25px;
            font: $teasertextfont;
        }

        .smalltitle {
            margin-top: 20px;
            margin-bottom: 10px;
            text-transform: uppercase;
            font: $findermodalflagfont;
        }

        .verifyemail {
            text-decoration: underline;
            cursor: pointer;
        }

