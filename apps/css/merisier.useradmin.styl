            .left {
                margin-right: 0;
                padding-right: 0;
            }

            .right {
                margin-left: 0;
            }

            .titlerow {
                img.icon40 {
                    margin-right: 15px;
                }
            }

            .order {
                .status {
                    margin-left: 20px;
                }

                .product {
                    .productaction {
                        margin: -40px -20px 0 0;
                        padding: 20px 20px 31px 20px;

                        .view {
                            font: $auxactionfont;
                            width: 40px;
                        }
                    }
                }
            }
        }

        .newaccountrow {
            height: 76px;

            .newaccount.teasertext {
                position: absolute;
            }
        }


        .productcontainer {
            .inset {
                .insetcontent {
                    .productsrow {
                        .products {
                            width: 900px;
                            margin: 30px 0px 0px 40px;

