#useradmin, #businessrecommendations, #businessportfolio, #businesscustomize, #businesscards {

    .angular-google-map-container {
        margin-top: 35px;
        height: 314px;
    }

    #bday_calendar{
      .fc-day-grid-event .fc-content {
        white-space: normal !important;
      }
    }

    .headerrow {
        min-height: 40px;
        text-transform: uppercase;
        color: $blue60;
        padding-top: 20px;

        .giftee {
            width: 60%;
            display: inline-block;
            margin-right: 12%;
        }

        .date {
            position: absolute
        }

        .status {
            margin-left: 20px;
        }
    }

    .encrypted.order {
      .product {
        .giftee {
            width: 72%;
            margin-top: 15px;
            margin-right: 0;
            display: inline-block;
        }

        .date {
            float: none;
            margin-left: 0;
            margin-top: 15px;
            display: inline-block;
        }
      }
    }
    .order {

        &.hidden {
            display: none;
        }

        .product {
            height: 100%;
				min-height: 60px;

            font: $contentfont;

            &.even {
                background-color: $saharaDust3;
            }

            img {
                width: 60px;
                height: 60px;
                float: left;
                padding: 10px 20px 10px 0;
            }

            .name {
                text-transform: uppercase;
                font-weight: $gotham_bold;
                margin-top: 16px;
                overflow: hidden;
            }

            .giftee {
                width: 60%;
                margin-top: 15px;
                margin-right: 20px;
            }

            .date {
                float: left;
                margin-top: -48px;
                margin-left: 72%;
            }

            .status {

                margin-top: 15px;
                text-transform: uppercase;

                color: $blue100;

                &.ok {
                    color: $green100;
                }

                &.canceled {
                    color: $red100;
                }

                &.reship {
                    color: $red100;
                }
            }

            .productaction {
                margin-top: -30px;
                padding-bottom: 20px;
                float: right;

                .view {
                    font: $mainactionfont;
                }

                &:hover {
                    transition:all ease-in-out 1s;
                    background: rgba($blue100, 0.6);

                    .view {
                        color: white;
                    }
                }
            }
        }
    }
}

#useradmin, #businessportfolio, #businesscards {

    margin-top: 20px;
    margin-bottom: 0;

    #orders {
        padding-bottom: 20px;
        margin-bottom: 40px;
    }

    #products {
        margin-bottom: 60px;
    }

    #business_products, #business_products2Â {

        .tile {
          margin 0

          .inset {
              margin 2px 0

              .insetcontent {
                  padding 0

                  .slidecontent {
                    width 100%
                  }

                  img {
                    width 220px
                    display block
                    margin 0 auto
                  }
              }
          }
        }
    }

    .adminbox {
        font: $contentfont;

        .white {
            background-color: white;
        }

        .left {
            margin-left: -20px;
            padding-left: 20px;
            margin-right: -20px;
            padding-right: 20px;
        }

        .right {
            margin-left: -20px;
            padding-left: 20px;
            margin-right: -20px;
            padding-right: 20px;
        }

