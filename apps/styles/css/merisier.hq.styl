#team_overview {
  .barchart {
    background-color: $saharaDust3

    .barcontainer {
      height: 110px
      width: 100%

      .title {
        text-transform: uppercase
        color: $blue60
      }

      .bar {
        background-color: white
        width: 100%
        height: 60px
        margin: 20px 0

        .barfilled {
          background-color: $green100
          height: 100%
          margin: 20px 0

          .percentage {
            position:relative
            top: 16px
            left: 20px
            color: white
            font-size: 20px
          }
        }
      }
    }
  }

  .seperator {
    &.contentrow {
      padding-top: 0
      padding-bottom: 0
    }

    .col {
      &.left {
        border-right: 2px solid $saharaDust3
        width: calc(25% - 2px)
        padding-top: 20px
        padding-bottom: 20px
      }

      &.middle {
        border-right: 2px solid $saharaDust3
        width: calc(25% - 2px)
        padding: 20px 0 20px 20px
      }

      &.right {
        width: 50%
        padding: 20px 0 20px 20px
      }

      .bignum {
        display: block
        font: $productinfopricefont
      }

      .desc {
        font: $productinfoinfofont
        text-transform: uppercase
      }
    }
  }
}

#team_members {
  .contentrow.member {
    height: 60px
    padding-top: 15px
    padding-bottom: 0px

    .texticon {
      display: inline-block
      vertical-align: top
      color: white
      font: $findermodalflagfont
      width: 28px
      height: 28px
      text-align: center
      padding-top: 6px
      border-width: 3px 6px
      border-style: solid
      border-radius: 50%
      text-transform: uppercase
      margin-right: 10px

      &.purple {
        background-color: $purple100
        border-color: $purple100
      }

      &.green {
        background-color: $green100
        border-color: $green100
      }

      &.gold {
        background-color: $gold100
        border-color: $gold100
      }

      &.unconfirmed {
        background-color: $blue30
        border-color: $blue30
      }
    }

    .text {
      display: inline-block

      &.unconfirmed {
        color: $blue30
      }

      .name {
        font: $teasertextfont
      }

      .unconfirmed {
        margin-left: 10px
        vertical-align: top
        font: $findermodalflagfont
        border: solid $blue30
        border-width: 2px 5px
        background-color: $blue30
        color: white
        text-transform: uppercase
      }

      .email {
        display: block
      }
    }
  }
}
