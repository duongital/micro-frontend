@media only screen and (min-width: $mediumbreak) {
    .row {
        .col {
            //min-height prevents skipping of empty columns
            min-height: 2px;

            &.medium50 {
                width: 50%;
            }
        }

        &.quarter {
            > .col {
                width: 25%;
            }

            > .col.span2 {
                width: 50%;
            }
        }
    }

    #top {
        padding: 0;

        .logo {
            padding: 10px 0 13px;
            img {
                width: 140px;
            }
        }

        & > ul {
            display: block;
            padding: 0;
            margin: 0;
            list-style-type: none;
            text-align: center;
            text-transform: uppercase;

            & > li {
                position: relative;
                display: inline-block;

                a {
                    display: block;
                    padding: 0 10px;
                    color: inherit;
                    text-decoration: none;

                    &.intro {
                        padding-right: 5px;
                        color: $blue100 !important;
                        font: $navintrofont;
                        text-transform: none;
                    }

                    &.cards {
                        margin-left: 15px;
                        padding-left: 25px;
                        border-left: 1px solid $blue60;
                        color: $blue60;
                    }
                }

                &:hover,
                &.open {
                    .dropdown {
                        display: block;
                        opacity: 1;
                        top: 18px;
                    }
                }
            }
        }
    }

    #content {

        .fullsizeimage{
            margin-bottom: 0px;

            .actions > button.mainaction {
                margin-top: 20px;
            }
        }

        .supertitle.fat {
            font: $fattitlefont;
            margin: 40px 0;
        }

        .fullsizeimage{
            margin-bottom: 0px;
            height: $stageheight;

            .supertitle {
              padding 0
            }
        }

        .tile {
          &.half {
            width: calc(50% - 10px)
          }
          &.full {
            width: 100%;
            clear: both;
          }
          .feedback{
            th,td{
              margin: 5px;
              padding-left: 10px;
              padding-right: 10px
            }
          }
        }
    }

    .showmobile {
        display: none;
    }

    .landingbutton {
        margin-top: 120px !important;
    }
}
